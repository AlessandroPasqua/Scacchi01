<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %-5p %c %n%m%n</pattern>
    </encoder>
  </appender>
  <appender name="file" class="ch.qos.logback.core.FileAppender">
    <File>${user.home}/Temp/log.txt</File>
    <Append>false</Append>
    <encoder>
      <pattern>%m%n</pattern>
    </encoder>
  </appender>
  <logger name="it.unibas.scacchi" level="debug"/>  
  <logger name="it.unibas.scacchi.modello.Cavallo" level="warn"/>  
  <logger name="it.unibas.scacchi.modello.Alfiere" level="warn"/>  
  <logger name="it.unibas.scacchi.modello.Pedone" level="debug"/>  
  <logger name="it.unibas.scacchi.test" level="debug"/>  
  <logger name="it.unibas.scacchi.controllo" level="debug"/>  
  <root level="warn">
    <appender-ref ref="stdout"/>
    <!--<appender-ref ref="file"/>-->
  </root>
</configuration>